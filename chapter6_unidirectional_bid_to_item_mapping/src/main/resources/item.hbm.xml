<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >


<hibernate-mapping package="com.gunjan">

    <class name="Item" table="ITEM">

        <!-- Common id property. -->
        <id name="id"
            type="long"
            column="ITEM_ID"
        >
            <generator class="native"/>
        </id>

        <property name="name">
            <column name="NAME"/>
        </property>


    </class>

</hibernate-mapping>