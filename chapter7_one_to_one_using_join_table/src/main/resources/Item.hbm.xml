<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.gunjan">
    <class name="Item" table="ITEM">
        <id name="id" column="ITEM_ID">
            <generator class="native"/>
        </id>
        <property name="name" type="string" column="STATE"/>

        <join table="ITEM_SHIPMENT" optional="true" inverse="true">

            <key column="ITEM_ID"></key>
            <many-to-one name="shipment" column="SHIPMENT_ID" not-null="true"
                         unique="true"></many-to-one>
        </join>

    </class>
</hibernate-mapping>